<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewTournamentActivity">


    <LinearLayout
        android:id="@+id/new_tourney_linear_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/basicInfoBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/newTourney"
                android:layout_width="match_parent"
                android:layout_height="@dimen/new_tournament_header"
                android:text="New Tournament"
                android:textSize="20dp"
                app:layout_constraintBottom_toTopOf="@id/basicInfo"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />

            <TextView
                android:id="@+id/basicInfo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/new_tournament_setting"
                android:text="Basic Info"
                android:textSize="20dp"
                app:layout_constraintBottom_toTopOf="@id/host"
                app:layout_constraintTop_toBottomOf="@id/newTourney" />

            <TextView
                android:id="@+id/host"
                android:layout_width="0dp"
                android:layout_height="@dimen/new_tournament_setting"
                android:text="Host"
                android:textSize="20dp"
                app:layout_constraintBottom_toTopOf="@id/tourneyName"
                app:layout_constraintHorizontal_weight="5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/dropdown"
                app:layout_constraintTop_toBottomOf="@id/basicInfo" />

            <ImageButton
                android:id="@+id/dropdown"
                android:layout_width="0dp"
                android:layout_height="31dp"
                android:onClick="showHostMenu"
                android:src="@drawable/ic_launcher_background"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@id/host"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/host" />

            <TextView
                android:id="@+id/tourneyName"
                android:layout_width="0dp"
                android:layout_height="@dimen/new_tournament_setting"
                android:text="Tournament name:"
                android:textSize="20dp"
                app:layout_constraintBottom_toTopOf="@id/url"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/name"
                app:layout_constraintTop_toBottomOf="@id/host" />

            <TextView
                android:id="@+id/url"
                android:layout_width="0dp"
                android:layout_height="@dimen/new_tournament_setting"
                android:text="URL  challonge.com/"
                android:textSize="20dp"
                app:layout_constraintBottom_toTopOf="@id/description"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/urlName"
                app:layout_constraintTop_toBottomOf="@id/tourneyName"

                />

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="@dimen/new_tournament_setting"
                android:text="Description"
                android:textSize="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/url" />


            <EditText
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="@dimen/new_tournament_setting"
                android:text=""
                app:layout_constraintLeft_toRightOf="@id/tourneyName"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/tourneyName" />

            <EditText
                android:id="@+id/urlName"
                android:layout_width="0dp"
                android:layout_height="@dimen/new_tournament_setting"
                app:layout_constraintLeft_toRightOf="@id/url"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/url" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="150sp"
                app:layout_constraintTop_toBottomOf="@id/description" />


        </android.support.constraint.ConstraintLayout>


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/game_info_header"
                android:layout_width="match_parent"
                android:layout_height="@dimen/new_tournament_header"
                android:text="Game Info"
                android:textSize="20dp"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/format_header"
                android:layout_width="0dp"
                android:layout_height="@dimen/new_tournament_setting"
                android:text="Format"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/format_menu"
                app:layout_constraintTop_toBottomOf="@id/game_info_header" />

            <ImageButton
                android:id="@+id/format_menu"
                android:layout_width="40dp"
                android:layout_height="@dimen/new_tournament_setting"
                android:onClick="showFormatMenu"
                android:src="@drawable/ic_launcher_background"
                app:layout_constraintLeft_toRightOf="@id/format_header"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/format_header" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/single_elim_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Include a match for 3rd place." />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/double_elim_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1-2 matches - winner's bracket finalist must lose twice" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 match" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="None" />
            </RadioGroup>

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/round_robin_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Place holder" />

        </android.support.constraint.ConstraintLayout>


        <android.support.constraint.ConstraintLayout
            android:id="@+id/registration_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/registration"
                android:layout_width="0dp"
                android:layout_height="70sp"
                android:text="Registration"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/registration_radio"
                app:layout_constraintTop_toTopOf="parent" />

            <RadioGroup
                android:id="@+id/registration_radio"
                android:layout_width="0dp"
                android:layout_height="70sp"
                app:layout_constraintHorizontal_weight="2"
                app:layout_constraintLeft_toRightOf="@id/registration"
                app:layout_constraintTop_toTopOf="@id/registration">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Provide a list of participants" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Host a sign-up page" />
            </RadioGroup>

            <TextView
                android:id="@+id/participants"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="Participants"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/registration" />

            <CheckBox
                android:id="@+id/participants_checkbox_team_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Require participants ro register as a team"
                app:layout_constraintLeft_toRightOf="@id/participants"
                app:layout_constraintTop_toTopOf="@id/participants" />

            <CheckBox
                android:id="@+id/participants_checkbox_maximum_participants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Specify a maximum number of participants"
                app:layout_constraintLeft_toRightOf="@id/participants"
                app:layout_constraintTop_toBottomOf="@+id/participants_checkbox_team_register" />


            <TextView
                android:id="@+id/start_time"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Start Time"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/participants" />

            <EditText

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Time"
                app:layout_constraintLeft_toRightOf="@id/start_time"
                app:layout_constraintTop_toTopOf="@id/start_time" />

            <TextView
                android:id="@+id/advanced_options"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Advance Options"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/start_time" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                app:layout_constraintLeft_toRightOf="@id/advanced_options"
                app:layout_constraintTop_toTopOf="@id/advanced_options" />


        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/advanced_options_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Advanced Options Layout Placeholder" />

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>


</ScrollView>
